            <div element="ID_TRPG_ARCHETYPE_FEATURE_MADWALKER_ARACHNID_CUNNING_PREDATOR" />
            <div element="ID_TRPG_ARCHETYPE_FEATURE_MADWALKER_ARACHNID_ARACHNID_PENUMBRAL_SHAPE" />
            <div element="ID_TRPG_ARCHETYPE_FEATURE_MADWALKER_ARACHNID_ARACHNID_NATURE" />
