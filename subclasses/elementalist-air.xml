            <div element="ID_TRPG_ARCHETYPE_FEATURE_ELEMENTALIST_AIR_PRIMARY" />
            <div element="ID_TRPG_ARCHETYPE_FEATURE_ELEMENTALIST_AIR_WIND_WISDOM" />
